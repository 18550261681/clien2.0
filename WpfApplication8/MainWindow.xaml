                <Border>
                    <Border.Background>
                        <ImageBrush ImageSource="Images/popudate.png" />
                    </Border.Background>
                    <StackPanel Margin="5">

                        <Button Width="70" Height="31"  Margin="2"/>
                        <Button Width="70" Height="31"  Margin="2"/>
                        <Button Width="70" Height="31"  Margin="2"/>
                    </StackPanel>
                </Border>
            </Popup>
            <Button Width="100" Height="25" x:Name="btn_xiangji" Click="btn_xiangji_Click"></Button>
